<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/fondoazul">

    <ImageView
        android:id="@+id/imLLogo"
        android:layout_width="283dp"
        android:layout_height="105dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoazul" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <View
            android:id="@+id/rectangle"
            android:layout_width="327dp"
            android:layout_height="515dp"
            android:background="@drawable/rectangulo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"/>

        <TextView
            android:id="@+id/tvLNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignStart="@+id/rectangle"
            android:layout_marginStart="53dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/ibm_plex_sans_devanagari"
            android:text="Nombre: "
            android:textColor="@color/grizzoscuro"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/etLNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignStart="@+id/rectangle"
            android:layout_alignEnd="@+id/rectangle"
            android:layout_marginHorizontal="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="50dp"
            android:ems="10"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvLBienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignStart="@+id/rectangle"
            android:layout_alignEnd="@+id/rectangle"
            android:layout_marginStart="50dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Bienvenido a \nCocobolo &amp; Cocobaby"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLBienvenido"
            android:layout_alignStart="@+id/rectangle"
            android:layout_marginStart="53dp"
            android:layout_marginTop="46dp"
            android:fontFamily="@font/ibm_plex_sans_devanagari"
            android:text="Correo: "
            android:textColor="@color/grizzoscuro" />

        <EditText
            android:id="@+id/etLCorreo"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tvLBienvenido"
            android:layout_alignStart="@+id/rectangle"
            android:layout_alignEnd="@+id/rectangle"
            android:layout_marginHorizontal="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="50dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text=""
            android:textColor="@color/grizzoscuro" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etLCorreo"
            android:layout_alignStart="@+id/rectangle"
            android:layout_marginStart="52dp"
            android:layout_marginTop="46dp"
            android:fontFamily="@font/ibm_plex_sans_devanagari"
            android:text="Contraseña: "
            android:textColor="@color/grizzoscuro" />

        <EditText
            android:id="@+id/etLContrasena"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_below="@+id/etLCorreo"
            android:layout_alignStart="@+id/rectangle"
            android:layout_alignEnd="@+id/rectangle"
            android:layout_marginHorizontal="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="50dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/grizzoscuro" />

        <Button
            android:id="@+id/btnRLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etLContrasena"
            android:layout_alignStart="@+id/rectangle"
            android:layout_alignEnd="@+id/rectangle"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/btnceleste"
            android:fontFamily="@font/klee_onee"
            android:text="Iniciar Sesión"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPrincipal"
            android:layout_width="158dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/rectangle"
            android:layout_alignTop="@+id/rectangle"
            android:layout_alignEnd="@+id/rectangle"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="153dp"
            android:background="@drawable/btnceleste"
            android:fontFamily="sans-serif-medium"
            android:text="Iniciar Sesión"
            android:textAllCaps="false"
            android:textColor="@color/azuloscuro"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/rectangle"
            android:layout_alignTop="@+id/rectangle"
            android:layout_alignEnd="@+id/rectangle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSegundon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/btngriz"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="153dp"
                android:text="Registrarse"
                android:textAllCaps="false"
                android:textColor="@color/grizzoscuro"
                android:textSize="16sp"
                android:textStyle="bold" />





        </RelativeLayout>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>